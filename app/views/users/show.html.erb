<h2><%= @user.name %></h2>

<ul>
	<li>Name: <%= @user.name %></li>
	<li>Username: <%= @user.username %></li>
	<li>Email: <%= @user.email %></li>
</ul>

<div class="controls">
	<%= link_to 'Edit', edit_user_path(@user) %>
	<%= link_to 'Delete', @user, :method => 'delete', :data => { :confirm => "Are you sure?" } %>
</div>