<%= form_for @user do |f| %>
<p>
	<%= f.label :username %>
	<%= f.text_field :username %>
</p>
<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :email %>
	<%= f.email_field :email %>
</p>
<p>
	<%= f.label :password_digest %>
	<%= f.password_field :password_digest %>
</p>

<%= f.submit %>
<% end %>