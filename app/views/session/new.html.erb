<div class="container">

	<h2>instantgramme</h2>

	<div class="window">

			<%= form_tag '/login' do  %>
			<p>
				<%= label_tag :email %>
				<%= email_field_tag :email, nil, :placeholder => 'example@gmail.com' %>
			</p>

			<p>
				<%= label_tag :password %>
				<%= password_field_tag :password, nil, :placeholder => 'enter your password' %>
			</p>

			<%= submit_tag "Login" %>
		
			<% end %>
		</div>
	</div>

</div>