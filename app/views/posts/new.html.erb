<h2>new post</h2>

<%= form_tag "/posts", multipart: true do %>

<p>
	<%= label_tag :title %>
	<%= text_field_tag :title %>
</p>
<p>
	<%= label_tag :content %>
	<%= text_field_tag :content %>
</p>
<p>
	<%= label_tag :image %>
	<%= url_field_tag :image %>
</p>
<p>
	<%= label_tag :file %>
	<%= cl_image_upload_tag :file %>
</p>
<p>
	<%= label_tag "Number of Likes: " %>
	<%= number_field_tag :like_count %>
</p>

  <%= submit_tag "Create Post" %>
<% end %>